{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <h1>Edit User</h1>
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit">Save</button>
    {{ form_end(form) }}

    <h2>Articles by {{ user.username }}</h2>
    <table>
        <thead>
            <tr>
                <th>Profile Picture</th>
                <th>Name</th>
                <th>Category</th>
                <th>Genre</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
                <tr>
                    <td><img src="{{ article.image }}" alt="Article Image" width="50" height="50"></td>
                    <td>{{ article.nom }}</td>
                    <td>{{ article.categorie }}</td>
                    <td>{{ article.genre }}</td>
                    <td>{{ article.prix }}</td>
                    <td>
                        <a href="{{ path('admin_article_edit', {id: article.id}) }}">Edit</a>
                        <a href="{{ path('admin_article_delete', {id: article.id}) }}" onclick="return confirm('Are you sure you want to delete this article?');">Delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}