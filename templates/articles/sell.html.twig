{% extends 'base.html.twig' %}

{% block title %}Vendre un Article - Jeans-Lassape{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/sell.css') }}">
{% endblock %}
{% block body %}
<div class="sell-article-container">
    <h1>Mettre en vente un article</h1>
    
    {{ form_start(form, {'attr': {'class': 'article-form'}}) }}
        <div class="form-group">
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            {% if form_errors(form.nom) %}
                <div class="form-error-message">
                    {{ form_errors(form.nom) }}
                </div>
            {% endif %}
        </div>

        <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
            {% if form_errors(form.description) %}
                <div class="form-error-message">
                    {{ form_errors(form.description) }}
                </div>
            {% endif %}
        </div>

        <div class="form-group">
            {{ form_label(form.prix) }}
            {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
            {% if form_errors(form.prix) %}
                <div class="form-error-message">
                    {{ form_errors(form.prix) }}
                </div>
            {% endif %}
        </div>

        <div class="form-group">
            {{ form_label(form.categorie) }}
            {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
            {% if form_errors(form.categorie) %}
                <div class="form-error-message">
                    {{ form_errors(form.categorie) }}
                </div>
            {% endif %}
        </div>

        <div class="form-group">
            {{ form_label(form.genre) }}
            {{ form_widget(form.genre, {'attr': {'class': 'form-control'}}) }}
            {% if form_errors(form.genre) %}
                <div class="form-error-message">
                    {{ form_errors(form.genre) }}
                </div>
            {% endif %}
        </div>

        <div class="form-group">
            {{ form_label(form.stock) }}
            {{ form_widget(form.stock, {'attr': {'class': 'form-control'}}) }}
            {% if form_errors(form.stock) %}
                <div class="form-error-message">
                    {{ form_errors(form.stock) }}
                </div>
            {% endif %}
        </div>

        <div class="form-group">
            {{ form_label(form.imageFile) }}
            {{ form_widget(form.imageFile, {'attr': {'class': 'form-control-file'}}) }}
            {% if form_errors(form.imageFile) %}
                <div class="form-error-message">
                    {{ form_errors(form.imageFile) }}
                </div>
            {% endif %}
        </div>

        <button type="submit" class="button-primary">Mettre en Vente</button>
    {{ form_end(form) }}
</div>
{% endblock %}
