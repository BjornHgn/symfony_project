{% extends 'base.html.twig' %}

{% block title %}Articles - Jeans-Lassape{% endblock %}

{% block body %}
    <section class="bannerunisex">
        <div class="bannerunisex-image1"></div>
    </section>

    <section class="articles">
        <h2>Nos Articles</h2>
        <div class="filters">
            <!-- Ajoute ici des filtres si nécessaire -->
        </div>

        <section class="featured-products">
            <div class="product-list">
                {% for article in articles %}
                    <div class="product-card">
                        <img src="{{ article.image }}" alt="{{ article.nom }}">
                        <div class="product-informations">
                            <h3>{{ article.nom }}</h3>
                            <p class="price">{{ article.prix }} €</p>
                            <p class="category">{{ article.categorie }}</p>
                            <button class="view-all-button">Ajouter</button>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </section>

        <div class="pagination">
            <!-- Si tu as une pagination, ajoute ici -->
        </div>
    </section>
{% endblock %}
