{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/auth.css') }}">
{% endblock %}

{% block body %}
    <div class="auth-page-wrapper">
        <div class="auth-container">
            <h1>Inscription</h1>
            {% if errors is defined and errors is not empty %}
                <div class="error-message">
                    <ul style="list-style: none; margin: 0; padding: 0;">
                        {% for error in errors %}
                            <li>{{ error }}</li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
            <form action="{{ path('app_register') }}" method="post">
                <div class="form-group">
                    <label for="username">Nom d'utilisateur :</label>
                    <input type="text" id="username" name="username" required value="{{ last_username is defined ? last_username : '' }}">
                </div>

                <div class="form-group">
                    <label for="email">Email :</label>
                    <input type="email" id="email" name="email" required value="{{ last_email is defined ? last_email : '' }}">
                </div>

                <div class="form-group">
                    <label for="password">Mot de passe :</label>
                    <input type="password" id="password" name="password" required>
                </div>

                <div class="form-group">
                    <label for="confirm_password">Confirmer le mot de passe :</label>
                    <input type="password" id="confirm_password" name="confirm_password" required>
                </div>

                <button type="submit">S'inscrire</button>
            </form>
            <div class="auth-links">
                <p>Déjà un compte ? <a href="{{ path('app_login') }}">Se connecter</a></p>
            </div>
        </div>
    </div>
{% endblock %}
